{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "target": "es5",
        "module": "esnext",
        "lib": ["es2017", "es7", "es6", "dom"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "dist"
    },
    "include": [
        "src/index.ts"
    ]
}